<h3><span class="red" id="favorites">Favorites</span></h3>

<% if @boxers.length > 0 %>
    <div id="images">
        <% @boxers.each do |boxer| %>
            <%= link_to boxer_path(boxer), class: "boxer" do %>
                <img src="<%= boxer.image_url %>">
                <h4><%= boxer.name %></h4>
            <% end %>
        <% end %>
    </div>
<% else %>
    <h5>You have no favorite boxers yet!</h5>
<% end %>